                <Image Source="/resources/Inventory.png"/>
            </ListBoxItem>
            <ListBoxItem>
                <Image Source="/resources/Inventory.png"/>
            </ListBoxItem>
            <ListBoxItem>
                <Image Source="/resources/Inventory.png"/>
            </ListBoxItem>
            <ListBoxItem>
                <Image Source="/resources/Inventory.png"/>
            </ListBoxItem>
            <ListBoxItem>
                <Image Source="/resources/Inventory.png"/>
            </ListBoxItem>
            <ListBoxItem>
                <Image Source="/resources/Inventory.png"/>
            </ListBoxItem>
            <ListBoxItem>
                <Image Source="/resources/Inventory.png"/>
            </ListBoxItem>
        </ListBox>
    </Grid>
</Page>
